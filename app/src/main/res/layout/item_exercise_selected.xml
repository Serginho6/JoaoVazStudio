<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_exercise_background">

    <CheckBox
        android:id="@+id/checkbox_task"
        android:text="Finalizado"
        style="@style/Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/tv_task_title"
        tools:text="Title Sample"
        style="@style/Title3"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_video_thumbnail"/>

    <TextView
        android:id="@+id/tv_task_description"
        style="@style/Body1"
        android:text="Description long to test my UI a little bit more"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_task_title"
        android:layout_toStartOf="@+id/iv_video_thumbnail" />

    <ImageView
        android:id="@+id/iv_video_thumbnail"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:src="@drawable/no_img_placeholder" />

</RelativeLayout>