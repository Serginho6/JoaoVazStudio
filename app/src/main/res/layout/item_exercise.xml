<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_exercise_background">

    <TextView
        android:id="@+id/tv_task_title"
        style="@style/Title3"
        android:layout_toStartOf="@+id/btn_delete_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:text="Title Sample" />

    <TextView
        android:id="@+id/tv_task_description"
        style="@style/Body1"
        android:layout_toStartOf="@+id/btn_delete_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/tv_task_title"
        tools:text="Exercise Description" />

    <ImageView
        android:id="@+id/btn_delete_exercise"
        android:background="@android:color/transparent"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/trash_icon"/>

</RelativeLayout>