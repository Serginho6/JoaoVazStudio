<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".presentation.view.ImcActivity">

    <ImageView
        android:id="@+id/imcIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCalcular"
        android:layout_alignTop="@+id/edttext_altura"
        android:layout_marginTop="20dp"
        android:src="@drawable/imc_index"/>

    <TextView
        style="@style/Body1"
        android:id="@+id/txtPreencha"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preencha_os_campos"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="60dp"/>

    <EditText
        style="@style/Body1"
        android:id="@+id/edttext_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPreencha"
        android:hint="@string/peso"
        android:inputType="numberDecimal"
        android:maxLength="10"/>

    <EditText
        style="@style/Body1"
        android:id="@+id/edttext_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edttext_peso"
        android:layout_marginTop="16dp"
        android:hint="@string/altura"
        android:inputType="numberDecimal"
        android:maxLength="10"/>

    <Button
        style="@style/ButtonPrimary"
        android:id="@+id/btnCalcular"
        android:text="@string/calcular"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"/>

</RelativeLayout>